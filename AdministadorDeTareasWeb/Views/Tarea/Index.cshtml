@model IEnumerable<CapaDato.Models.Tarea>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear Tarea", "Create", "Tarea", htmlAttributes: new { @class = "btn btn-primary"})
</p>

@if (Model.Count() == 0)
{
    <h2>No hay registros</h2>
}
else
{

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                Fecha de entrega
            </th>
            <th>
                Prioridad
            </th>
            <th>
                Estado
            </th>
            <th>
                Categoría
            </th>
            <th>
                Creado por
            </th>
            <th>
                Responsable
            </th>
            <th>
                Acciones
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaEstimadaEntrega)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prioridad.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UsuarioPropietario.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UsuarioAsignado.Nombre)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, htmlAttributes: new {@class = "btn btn-outline-warning"}) |
                    @Html.ActionLink("Info", "Details", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-outline-secondary" }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-outline-danger" })
                </td>
            </tr>
        }

    </table>

}