@model CapaDato.Models.Tarea

@{
    ViewBag.Title = "Delete";
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Tarea</h4>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Titulo)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Titulo)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.FechaCreacion)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FechaCreacion)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.FechaEstimadaEntrega)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FechaEstimadaEntrega)
                </dd>

                <dt>
                    Prioridad
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Prioridad.Nombre)
                </dd>

                <dt>
                    Estado
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Estado.Nombre)
                </dd>

                <dt>
                    Categoría
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Categoria.Nombre)
                </dd>

                <dt>
                    Creado por
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.UsuarioPropietario.Nombre)
                </dd>

                <dt>
                    Responsable
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.UsuarioAsignado.Nombre)
                </dd>

            </dl>

        </div>

        <div class="col-md-6">
            @if(Model.Comentarios.Count() == 0)
            {
                <h3>Sin Comentarios</h3>
            }
            else
            {
                foreach(var comentario in Model.Comentarios)
                {
                    <h3>Comentarios</h3>
                    <article class="card shadow my-3">
                        <div class="card-body">
                            <h3 class="card-title">
                                <strong>@comentario.Usuario.Nombre</strong>
                            </h3>
                            <p>@comentario.ComentarioTxt</p>
                            <p>@comentario.FechaComentario</p>
                        </div>
                    </article>
                }
            }
        </div>
    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Confirmar" class="btn btn-danger" /> |
            @Html.ActionLink("Volver", "Index", "Tarea", htmlAttributes: new {@class = "btn btn-outline-danger"})
        </div>
    }
</div>
