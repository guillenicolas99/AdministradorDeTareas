@model IEnumerable<CapaDato.Models.Usuario>

@{
    ViewBag.Title = "Index";
    int i = 1;
}

<p>
    @Html.ActionLink("Agregar", "Create", "Usuario", htmlAttributes: new {@class = "btn btn-primary"})
</p>
<table class="table table-hover">
    <tr>
        <th>
            #
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Correo)
        </th>
        <th>
            Acciones
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @i
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Correo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }, htmlAttributes: new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id }, htmlAttributes: new {@class = "btn btn-danger"})
        </td>
    </tr>
    i++;
}

</table>
