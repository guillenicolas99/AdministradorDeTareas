@model IEnumerable<CapaDato.Models.Prioridad>

@{
    ViewBag.Title = "Index";
    int i = 1;
}

<p>
    @Html.ActionLink("Agregar", "Create", "Prioridad", htmlAttributes: new {@class = "btn btn-primary"})
</p>

<div>
    <a class="btn btn-secondary fw-bold" target="_blank" href=" @Url.Action("VisualizadorReport.aspx", "ViewReport", new { Reporte = "RptPrioridad.rdlc" })">
        <i class="fas fa-print"></i>Imprimir Lista de Prioridades
    </a>
</div>

<table class="table table-hover">
    <tr>
        <th>
            #
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Clase)
        </th>
        <th>
            Acciones
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @i
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Clase)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }, htmlAttributes: new {@class = "btn btn-warning"}) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id }, htmlAttributes: new { @class = "btn btn-danger" })
        </td>
    </tr>
    i++;
}

</table>
