@model IEnumerable<CapaDato.Models.Categoria>

@{
    ViewBag.Title = "Index Categoria";
    int i = 1;
}

<p>
    @Html.ActionLink("Agregar Categoría", "Create", "Categoria    ", htmlAttributes: new { @class = "btn btn-primary"})
</p>

<div>
    <a class="btn btn-secondary fw-bold" target="_blank" href=" @Url.Action("VisualizadorReport.aspx", "ViewReport", new { Reporte = "RptCategoria.rdlc" })">
        <i class="fas fa-print"></i>Imprimir Lista de Categorias
    </a>
</div>



@if (Model.Count() > 0)
{

    <table class="table table-hover">
        <tr>
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                Acciones
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @i
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, htmlAttributes: new {@class = "btn btn-warning"}) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger" })
                </td>
            </tr>
            i++;
        }

    </table>

}else
    {
        <h1>No hay registros</h1>
    }
