                        <h2 class="card-title">Categorías</h2>
                        <p>@ViewBag.categorias</p>
                        <div class="btn-group" role="group" aria-label="Basic outlined example">
                            <a href="Categoria/" class="@btnsClass">Lista</a>
                            @*<a href="@Url.Action()" class="@btnsClass">Imprimir</a>*@
                            <a href="@Url.Action("ReportVisualizador.aspx", "ViewReport", new {Reporte = "RptCategorias.rdlc"})" target="_blank" class="@btnsClass">Imprimir</a>
                            <a href="Categoria/Create" class="@btnsClass">Agregar</a>
                        </div>
                    </div>
                </article>
            </div>

